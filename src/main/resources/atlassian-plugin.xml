<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
	<plugin-info>
		<description>${project.description}</description>
		<version>${project.version}</version>
		<vendor name="${project.organization.name}" url="${project.organization.url}" />
	</plugin-info>

	<taskType key="scriptEngineBuildTask" name="ScriptEngine Task" class="com.trusolve.atlassian.bamboo.plugins.scriptengine.tasks.ScriptEngineBuildTask">
		<description>Executes JSR223 scripts in the context of the Build/Deployment Task.</description>
		<category name="deployment" />
		<category name="build" />
		<configuration class="com.trusolve.atlassian.bamboo.plugins.scriptengine.tasks.ScriptEngineBuildTaskConfigurator" />
		<resource type="freemarker" name="edit" location="com/trusolve/atlassian/bamboo/plugins/scriptengine/templates/scriptEngineTaskEdit.ftl" />
		<resource type="freemarker" name="view" location="com/trusolve/atlassian/bamboo/plugins/scriptengine/templates/scriptEngineTaskView.ftl" />
		<resource type="download" name="icon" location="com/trusolve/atlassian/bamboo/plugins/scriptengine/templates/images/scriptEngineLogo.png" />
	</taskType>
	<taskType key="scriptEngineDeployTask" name="ScriptEngine Task" class="com.trusolve.atlassian.bamboo.plugins.scriptengine.tasks.ScriptEngineDeployTask">
		<description>Executes JSR223 scripts in the context of the Build/Deployment Task.</description>
		<category name="deployment" />
		<category name="build" />
		<configuration class="com.trusolve.atlassian.bamboo.plugins.scriptengine.tasks.ScriptEngineDeployTaskConfigurator" />
		<resource type="freemarker" name="edit" location="com/trusolve/atlassian/bamboo/plugins/scriptengine/templates/scriptEngineTaskEdit.ftl" />
		<resource type="freemarker" name="view" location="com/trusolve/atlassian/bamboo/plugins/scriptengine/templates/scriptEngineTaskView.ftl" />
		<resource type="download" name="icon" location="com/trusolve/atlassian/bamboo/plugins/scriptengine/templates/images/scriptEngineLogo.png" />
	</taskType>
	<additionalBuildConfigurationPlugin key="ScriptEngineBuildConfigurationPlugin" name="Script Engine Build Processor Server Configuration" class="com.trusolve.atlassian.bamboo.plugins.scriptengine.ScriptEngineBuildConfigurationPlugin">
		<description>Perform setting and expiry of labels on builds.</description>
		<resource type="freemarker" name="edit" location="com/trusolve/atlassian/bamboo/plugins/scriptengine/templates/scriptEngineBuildConfigurationEdit.ftl" />
		<resource type="freemarker" name="view" location="com/trusolve/atlassian/bamboo/plugins/scriptengine/templates/scriptEngineBuildConfigurationView.ftl" />
	</additionalBuildConfigurationPlugin>
	<buildProcessorServer key="scriptEngineBuildProcessorServer" name="Label Expiration Build Processor Server" class="com.trusolve.atlassian.bamboo.plugins.scriptengine.ScriptEngineBuildProcessorServer">
		<skipIfFailed>false</skipIfFailed>
		<description>Executes a script on the server at the end of a build.</description>
	</buildProcessorServer>
	<bambooEventListener key="scriptEngineEventListener" name="Label Expiration Event Listener" class="com.trusolve.atlassian.bamboo.plugins.scriptengine.ScriptEngineEventListener">
		<description>Optionally executes a script on the server at the completion of a deployment.  This is a hack because Atlassian hasn't made the BuildProcessorServer work with Deployments.</description>
	</bambooEventListener>
	<component-import key="transactionTemplate" name="Hibernate Transaction Template" interface="com.atlassian.sal.api.transaction.TransactionTemplate">
		<description>hibernate transaction</description>
	</component-import>
</atlassian-plugin>